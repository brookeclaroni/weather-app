<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detailsBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            tools:context=".DetailsActivity">

            <ImageView
                android:id="@+id/day4ImageView"
                android:layout_width="38dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/day4Condition"
                app:layout_constraintEnd_toStartOf="@+id/day4Condition"
                app:layout_constraintTop_toTopOf="@+id/day4Condition" />

            <ImageView
                android:id="@+id/day5ImageView"
                android:layout_width="38dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/day5Condition"
                app:layout_constraintEnd_toStartOf="@+id/day5Condition"
                app:layout_constraintTop_toTopOf="@+id/day5Condition" />

            <ImageView
                android:id="@+id/day3ImageView"
                android:layout_width="38dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/day3Condition"
                app:layout_constraintEnd_toStartOf="@+id/day3Condition"
                app:layout_constraintTop_toTopOf="@+id/day3Condition" />

            <TextView
                android:id="@+id/day2Condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/day1Condition"
                app:layout_constraintTop_toTopOf="@+id/date2TextView" />

            <TextView
                android:id="@+id/day4Condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/day3Condition"
                app:layout_constraintTop_toTopOf="@+id/date4TextView" />

            <TextView
                android:id="@+id/day5Condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/day4Condition"
                app:layout_constraintTop_toTopOf="@+id/date5TextView" />

            <TextView
                android:id="@+id/date5TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:ellipsize="marquee"
                android:text="Day5"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date4TextView" />

            <TextView
                android:id="@+id/date3TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:ellipsize="marquee"
                android:text="Day3"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date2TextView" />

            <TextView
                android:id="@+id/day3Condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/day2Condition"
                app:layout_constraintTop_toTopOf="@+id/date3TextView" />

            <TextView
                android:id="@+id/date4TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:ellipsize="marquee"
                android:text="Day4"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date3TextView" />

            <TextView
                android:id="@+id/date2TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:ellipsize="marquee"
                android:text="Day2"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date1TextView" />

            <TextView
                android:id="@+id/day2Aqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/day1Aqi"
                app:layout_constraintTop_toTopOf="@+id/day2Condition" />

            <TextView
                android:id="@+id/day5Aqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/day4Aqi"
                app:layout_constraintTop_toTopOf="@+id/day5Condition" />

            <TextView
                android:id="@+id/day4Aqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/day3Aqi"
                app:layout_constraintTop_toTopOf="@+id/day4Condition" />

            <TextView
                android:id="@+id/day3Aqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/day2Aqi"
                app:layout_constraintTop_toTopOf="@+id/day3Condition" />

            <TextView
                android:id="@+id/detailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Details" />

            <TextView
                android:id="@+id/day1Condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:ellipsize="marquee"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/date1TextView"
                app:layout_constraintTop_toTopOf="@+id/date1TextView" />

            <TextView
                android:id="@+id/date1TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="50dp"
                android:ellipsize="marquee"
                android:text="Day1"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailsTextView" />

            <TextView
                android:id="@+id/day1Aqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/day1Condition" />

            <ImageView
                android:id="@+id/day1ImageView"
                android:layout_width="38dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/day1Condition"
                app:layout_constraintEnd_toStartOf="@+id/day1Condition"
                app:layout_constraintTop_toTopOf="@+id/day1Condition" />

            <ImageView
                android:id="@+id/day2ImageView"
                android:layout_width="38dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/day2Condition"
                app:layout_constraintEnd_toStartOf="@+id/day2Condition"
                app:layout_constraintTop_toTopOf="@+id/day2Condition" />

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="#00FFFFFF"
                android:tint="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="?attr/homeAsUpIndicator" />

            <ProgressBar
                android:id="@+id/detailsProgBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/colorBackgroundLight"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartView"
                android:layout_width="354dp"
                android:layout_height="202dp"
                android:layout_marginTop="104dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/day5ImageView" />

            <TextView
                android:id="@+id/xAxisDate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chartView" />

            <TextView
                android:id="@+id/xAxisDate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/xAxisDate3"
                app:layout_constraintStart_toEndOf="@+id/xAxisDate1"
                app:layout_constraintTop_toTopOf="@+id/xAxisDate1" />

            <TextView
                android:id="@+id/xAxisDate5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/xAxisDate4" />

            <TextView
                android:id="@+id/xAxisDate4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/xAxisDate5"
                app:layout_constraintStart_toEndOf="@+id/xAxisDate3"
                app:layout_constraintTop_toTopOf="@+id/xAxisDate3" />

            <TextView
                android:id="@+id/xAxisDate3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/xAxisDate2" />

            <View
                android:id="@+id/seperator1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintBottom_toTopOf="@+id/chartView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/day5ImageView" />

            <View
                android:id="@+id/seperator2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintBottom_toTopOf="@+id/percepTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/xAxisDate3" />

            <TextView
                android:id="@+id/UVValue"
                android:layout_width="76dp"
                android:layout_height="27dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/UVTitle"></TextView>

            <TextView
                android:id="@+id/UVTitle"
                android:layout_width="76dp"
                android:layout_height="18dp"
                android:layout_marginTop="40dp"
                android:text="UV"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/UVValue"
                app:layout_constraintTop_toBottomOf="@+id/windValue"></TextView>

            <TextView
                android:id="@+id/UVTitle10"
                android:layout_width="76dp"
                android:layout_height="18dp"
                android:layout_marginStart="176dp"
                android:text="Pressure"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/UVValue"
                app:layout_constraintTop_toTopOf="@+id/UVTitle"></TextView>

            <TextView
                android:id="@+id/percepTitle"
                android:layout_width="129dp"
                android:layout_height="18dp"
                android:layout_marginTop="52dp"
                android:text="Precipitation probability"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/UVValue"
                app:layout_constraintTop_toBottomOf="@+id/xAxisDate1"></TextView>

            <TextView
                android:id="@+id/percepTitle2"
                android:layout_width="76dp"
                android:layout_height="18dp"
                android:layout_marginStart="176dp"
                android:text="Precipitation"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/UVValue"
                app:layout_constraintTop_toTopOf="@+id/percepTitle"></TextView>

            <TextView
                android:id="@+id/percepValue"
                android:layout_width="76dp"
                android:layout_height="27dp"
                android:layout_marginTop="10dp"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/UVValue"
                app:layout_constraintTop_toBottomOf="@+id/percepTitle"></TextView>

            <TextView
                android:id="@+id/percepValue2"
                android:layout_width="76dp"
                android:layout_height="27dp"
                android:layout_marginTop="10dp"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/percepTitle2"
                app:layout_constraintTop_toBottomOf="@+id/percepTitle2"></TextView>

            <TextView
                android:id="@+id/windTitle"
                android:layout_width="76dp"
                android:layout_height="18dp"
                android:layout_marginTop="40dp"
                android:text="Wind"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/UVValue"
                app:layout_constraintTop_toBottomOf="@+id/percepValue"></TextView>

            <TextView
                android:id="@+id/windTitle2"
                android:layout_width="76dp"
                android:layout_height="18dp"
                android:layout_marginStart="176dp"
                android:text="Visibility"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/UVValue"
                app:layout_constraintTop_toTopOf="@+id/windTitle"></TextView>

            <TextView
                android:id="@+id/windValue"
                android:layout_width="76dp"
                android:layout_height="27dp"
                android:layout_marginTop="10dp"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/UVValue"
                app:layout_constraintTop_toBottomOf="@+id/windTitle"></TextView>

            <TextView
                android:id="@+id/windValue2"
                android:layout_width="76dp"
                android:layout_height="27dp"
                android:layout_marginStart="176dp"
                android:layout_marginTop="10dp"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/UVValue"
                app:layout_constraintTop_toBottomOf="@+id/windTitle2"></TextView>

            <TextView
                android:id="@+id/UVTitle2"
                android:layout_width="76dp"
                android:layout_height="27dp"
                android:layout_marginBottom="50dp"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/UVTitle10"
                app:layout_constraintTop_toTopOf="@+id/UVValue"></TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

